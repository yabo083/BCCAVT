{
    "manifest_version": 3,
    "name": "通用Cookie获取器",
    "version": "1.0",
    "description": "一个可以获取当前激活网站Cookie的开发工具。",
    
    "permissions": [
        "cookies",
        "activeTab"
    ],
    
    "host_permissions": [
        "<all_urls>",
        "http://localhost:3000/*"
    ],

    "content_scripts": [
        {
            "matches": ["http://localhost:3000/*"],
            "js": ["content-script.js"]
        }
    ],

    "action": {
        "default_icon": "icon.png",
        "default_title": "获取Cookie",
        "default_popup": "popup.html"
    },

    "background": {
        "service_worker": "background.js"
    }
}
